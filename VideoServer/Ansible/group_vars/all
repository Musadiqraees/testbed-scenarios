service_name: service
service_regex: service
hostname_mounted: /etc_host/hostname

collector:
  interval: 500ms
  api_port: 7777
  port: 5010
  file_name: data.bin
  data_path: /opt/bitflow/data-collector
  data_path_mounted: /bitflow/data-collector

injector:
  container_name: "injector"
  hostname: $(cat {{ hostname_mounted }}).ims4
  api_port: 7888

